{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "snipio",
    "version": "0.0.2"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "MIT",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/icon@32.png",
        "icons/icon@128.png",
        "icons/icon@256.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.snipio.dev",
      "longDescription": "A FOSS application for save and describe your snippets",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": "snip",
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "Snippets manager",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "title": "Snip.io",
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "width": 1000,
        "minWidth": 1000,
        "minHeight": 600 
      }
    ]
  }
}
